    <div class="signin">
        <div class="content">
            <h1>Forgot Password??</h1>
            <form action="forgot" method="post">
                <div class="inputBox">
                    <input type="text" id="username" name="username" required><i>Username</i>
                </div>
                <div class="inputBox">
                    <input type="text" id="recovery" name="recovery" required><i>Recovery Code</i>
                </div>
                <div class="inputBox">
                    <button type="submit">Change Password</button>
                </div>
            </form>

            <div>
                <a href="Login.jsp">Go back to Login page </a>
                <a href="index.html">Back to Home</a>
            </div>

            <%-- Display error message if login fails --%>
            <% String error = request.getParameter("error");
                if (error != null && error.equals("1")) { %>
            <p style="color: red;">Invalid username or recovery code. Please try again.</p>
            <% } %>

            <%-- Display success message if registration is successful --%>
            <% String rs = request.getParameter("registration");
                if (rs != null && rs.equals("success")) { %>
            <p style="color: green;">You can change the password now</p>
            <% } %>
